@page
@model ydai5.Pages.UpdateItemModel
@{
    ViewData["Title"] = "Update Item";
    Layout = "_Layout";
}

<h2>Update Item</h2>

<form method="get">
    <div>
        <label>Item Code</label>
        <input asp-for="ItemCode" />
    </div>
    <input type="submit" value="Find Item" />
</form>

<form method="post">
    <div>
        <label>Description</label>
        <input asp-for="Description" />
        <span asp-validation-for="Description"></span>
    </div>
    <div>
        <label>Unit Price</label>
        <input type="number" step="0.01" asp-for="UnitPrice" />
        <span asp-validation-for="UnitPrice"></span>
    </div>
    <input type="submit" value="Update Item" />
    <button type="reset">Reset</button>
    <button type="reset"><a href="~/Index">Cancel</a></button>
</form>

<div>@Model.Message</div>
