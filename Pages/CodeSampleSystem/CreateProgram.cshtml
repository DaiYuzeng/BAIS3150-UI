@page
@model ydai5.Pages.CreateProgramModel
@{
}
<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <title>Create Program</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
</head>

<body>
    <div class="container mt-5">
        <h2>Create Program</h2>
        <button onclick="location.href='@Url.Page("/Welcome")'" class="btn btn-secondary mb-3">Back</button>

        <form method="post">
            <div class="form-group">
                <label asp-for="ProgramName">Program Name</label>
                <input asp-for="ProgramName" class="form-control" />
                @Html.ValidationMessage("ProgramName", null, new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label asp-for="ProgramCode">Program Code</label>
                <input asp-for="ProgramCode" class="form-control" />
                @Html.ValidationMessage("ProgramCode", null, new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label asp-for="Description">Description</label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                @Html.ValidationMessage("Description", null, new { @class = "text-danger" })
            </div>

            <input type="submit" name="Submit" value="Submit" class="btn btn-primary" />
        </form>

        @if (!string.IsNullOrEmpty(Model.Message))
        {
            <div class="alert alert-info mt-3">
                @Model.Message
            </div>
        }
    </div>
</body>

</html>
