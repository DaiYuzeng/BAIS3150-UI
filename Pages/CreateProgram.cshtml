@page
@model ydai5.Pages.CreateProgramModel
@{
    ViewData["Title"] = "Create Program";
    Layout = "_Layout";
}

<h2>Create Program</h2>
    <button onclick="location.href='@Url.Page("/Index")'" class="btn btn-secondary mb-3">Back</button>

    <form method="post">
        <div class="form-group">
            <label asp-for="ProgramCode">Program Code</label>
            <input asp-for="ProgramCode" class="form-control" />
            <span asp-validation-for="ProgramCode" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description">Program Description</label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <input type="submit" name="Submit" value="Create Program" class="btn btn-primary" />
    </form>
<div>@Model.Message</div>
