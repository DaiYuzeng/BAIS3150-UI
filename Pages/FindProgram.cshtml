@page
@model ydai5.Pages.FindProgramModel
@{
    ViewData["Title"] = "Find Program";
}
<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <title>Find Program</title>
    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/jquery-validate/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    @* <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" /> *@
</head>

<body>
    <div class="container mt-5">
        <h2>Find Program</h2>
        <button onclick="location.href='@Url.Page("/Index")'" class="btn btn-secondary mb-3">Back</button>

        <form method="post">
            <div class="form-group">
                <label for="ProgramCode">Program Code</label>
                <input asp-for="ProgramCode" id="ProgramCode" class="form-control" />
                <span class="invalid-feedback"></span>
                @Html.ValidationMessage("ProgramCode")
            </div>

            <input type="submit" name="Submit" value="Find Program" class="btn btn-primary" />
        </form>

        @if (Model.ActiveProgram != null)
        {
            <div class="mt-5">
                <h4>Program Details</h4>
                <p><strong>Program Code:</strong> @Model.ActiveProgram.ProgramCode</p>
                <p><strong>Description:</strong> @Model.ActiveProgram.Description</p>

                <h5>Enrolled Students</h5>
                @foreach (var student in Model.ActiveProgram.EnrolledStudents)
                {
                    <p>
                        <strong>Student ID:</strong> @student.StudentID<br />
                        <strong>First Name:</strong> @student.FirstName<br />
                        <strong>Last Name:</strong> @student.LastName<br />
                        <strong>Email:</strong> @student.Email
                    </p>
                    <hr />
                }
            </div>
        }

        <div class="mt-3 text-danger">@Model.Message</div>
    </div>
</body>

</html>
