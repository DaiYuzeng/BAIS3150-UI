@page
@model ydai5.Pages.RemoveStudentModel
@{
    ViewData["Title"] = "Remove Student";
    Layout = "_Layout";
}

<h2>Remove Student</h2>

<form method="get">
    <div class="form-group">
        <label for="StudentID">Enter Student ID to Search</label>
        <input name="StudentID" class="form-control" />
        <span class="invalid-feedback"></span>
    </div>

    <input type="submit" name="Search" value="Find Student" class="btn btn-primary" />
</form>

@if (Model.EnrolledStudent != null)
{
    <div class="mt-4">
        <h4>Student Details</h4>
        <p><strong>Student ID:</strong> @Model.EnrolledStudent.StudentID</p>
        <p><strong>First Name:</strong> @Model.EnrolledStudent.FirstName</p>
        <p><strong>Last Name:</strong> @Model.EnrolledStudent.LastName</p>
        <p><strong>Email:</strong> @Model.EnrolledStudent.Email</p>

        <form method="post">
            <input type="hidden" name="StudentID" />
            <input type="submit" name="Submit" value="Remove Student" class="btn btn-danger" />
        </form>
    </div>
}

<div class="mt-3 text-danger">@Model.Message</div>