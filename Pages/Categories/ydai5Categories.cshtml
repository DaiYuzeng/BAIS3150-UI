@page
@model ydai.Categories.ydai5CategoriesModel
@{
}
@{
    ViewData["Title"] = "Northwind Categories";
}

<div class="container">
    <h2>Northwind Product Categories</h2>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Category Name</th>
                <th>Description</th>
                <th>Picture</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model.Categories)
            {
                <tr>
                    <td>@category.CategoryName</td>
                    <td>@category.Description</td>
                    <td>
                        @if (category.Picture != null && category.Picture.Length > 0)
                        {
                            <img src="data:image/bmp;base64,@category.Picture" alt="@category.CategoryName" />
                        }
                        else
                        {
                            <span>No Image Available</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>